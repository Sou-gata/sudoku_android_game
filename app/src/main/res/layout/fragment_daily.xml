<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DailyFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:background="@color/colorPrimary">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="-225dp"
            app:lottie_autoPlay="true"
            app:lottie_cacheComposition="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation_ray_rotate" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            app:lottie_autoPlay="true"
            app:lottie_cacheComposition="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/android_sparkle"
            app:lottie_speed="0.75" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="175dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/cup"
            android:src="@drawable/cup" />

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="225dp"
            android:text="@string/month_year_placeholder"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_prev_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="143dp"
            android:contentDescription="@string/previous_month"
            android:src="@drawable/ic_left_arrow"
            app:tint="#90ffffff" />

        <ImageView
            android:id="@+id/iv_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="143dp"
            android:contentDescription="@string/previous_month"
            android:scaleX="-1"
            android:src="@drawable/ic_left_arrow"
            app:tint="#90ffffff" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <GridView
                android:layout_marginTop="10dp"
                android:id="@+id/calendar_grid"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_marginStart="8dp"
                android:numColumns="7"
                android:paddingHorizontal="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/play"
                android:paddingHorizontal="100dp"
                android:paddingVertical="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>